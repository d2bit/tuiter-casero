<!DOCTYPE html>
<html>
<head>
  <title>App</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if flash.any? %>
    <% flash.keys.each do |notice_class| %>
      <div class='<%= notice_class %>'>
        <%= flash[notice_class]  %>
      </div>
    <% end %>
  <% end %>

<%= yield %>

<% if current_user.present? %>
  <div class='btn btn-warning'>
    <%= link_to 'LOG OUT', logout_path %>
  </div>
<% else %>
  <div class='btn btn-success'>
    <%= link_to 'TWITTER SIGN IN', login_path %>
  </div>
<% end %>

</body>
</html>
